  <script>
    // Simple animation: follow the SVG path and update progress
    (function(){
      const samovar = document.getElementById('samovar');
      const startBtn = document.getElementById('startBtn');
      const resetBtn = document.getElementById('resetBtn');
      const progressBar = document.getElementById('progressBar');
      const path = document.querySelector('#p');
      const pathLength = path.getTotalLength();
      let animId = null;

      // place samovar at the start of the path
      function placeAt(t){
        // t in [0,1]
        const pt = path.getPointAtLength(pathLength * t);
        // convert SVG coordinates to stage pixel coords
        const stage = document.getElementById('stage');
        const bbox = stage.getBoundingClientRect();
        // path viewBox is 0..1000 x 0..400; map to bbox
        const x = bbox.left + (pt.x / 1000) * bbox.width;
        const y = bbox.top + (pt.y / 400) * bbox.height;
        // set samovar center near the point
        const sW = samovar.offsetWidth, sH = samovar.offsetHeight;
        samovar.style.left = Math.max(6, (pt.x / 1000) * bbox.width - sW/6) + 'px';
        samovar.style.top = Math.min(bbox.height - sH - 12, (pt.y / 400) * bbox.height + 24) + 'px';
      }

      // Reset to start
      function reset(){
        cancelAnimationFrame(animId);
        progressBar.style.width = '0%';
        progressBar.style.transform = 'translateX(0)';
        progressBar.style.transition = 'none';
        samovar.style.transition = 'transform 0.12s linear';
        placeAt(0);
      }

      // Animate from 0 -> 1 over duration ms
      function animate(duration=4000){
        const start = performance.now();
        function step(now){
          const elapsed = now - start;
          const t = Math.min(1, elapsed / duration);
          placeAt(t);
          progressBar.style.width = (t*100) + '%';
          progressBar.style.transition = 'width 120ms linear';
          if(t < 1){ animId = requestAnimationFrame(step); }
          else { animId = null; }
        }
        if(animId) cancelAnimationFrame(animId);
        animId = requestAnimationFrame(step);
      }

      // initial placement
      window.addEventListener('load', ()=>{ reset(); });
      startBtn.addEventListener('click', ()=>{ animate(5000); });
      resetBtn.addEventListener('click', reset);

      // make layout reactive on resize
      window.addEventListener('resize', ()=>{ placeAt(0); });

    })();
  </script>
</body>
</html>
